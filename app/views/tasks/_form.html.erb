<div class="container d-flex justify-content-center">
  <div class='card border-primary mb-3 d-flex p-5 shadow-lg' style='max-width: 40rem; '>
    <%= form_with model: @task do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :details, class: "form-label" %>
        <%= f.text_field :details, class: "form-control" %>
      </div>
      <div class="form-check mb-3 d-flex justify-content-center gap-2">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, class: "form-check-label" %>
      </div>
      <div class='text-center'>
        <%= f.submit class:'btn btn-primary'%>
      </div>
    <% end %>
  </div>
</div>
