<h1 class = "header text-center mt-5 ">MY TASK</h1>
<p class="text-center fw-bold"><%= @task.title %></p>
 <p class="text-center fw-bold"><%= @task.details %></p>
 <p class="text-center fw-bold"><%= @task.completed %></p>

<div class="d-flex justify-content-center gap-3">

    <%= link_to "BACK TO HOME", tasks_path(@tasks), class: "btn btn-gradient d-inline-block mt-5"   %>

    <%= link_to "Edit Task", edit_task_path, class: "btn btn-gradient d-inline-block mt-5"   %>
<%= link_to "Delete", task_path(@task), class: "btn btn-gradient d-inline-block mt-5",  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
</div>
