<div class='container d-flex justify-content-center' style='padding-bottom: 130px;'>
  <div class='card mt-5 w-50'>
    <h1 class = "header text-center mt-5 p-3">MY TASK</h1>
    <p class="text-center fw-bold">Task To Do: <%= @task.title.capitalize %></p>
    <p class="text-center fw-bold">Task Details: <%= @task.details.capitalize %></p>
    <p class="text-center fw-bold">Task Completed: <%= @task.completed ? "Yes" : 'No' %></p>
    <div class="d-flex justify-content-center gap-3 pb-3">
      <%= link_to "BACK TO HOME", tasks_path(@tasks), class: "btn btn-secondary d-inline-block mt-5"   %>
      <%= link_to "Edit Task", edit_task_path, class: "btn btn-primary d-inline-block mt-5"   %>
      <%= link_to "Delete", task_path(@task), class: "btn btn-danger d-inline-block mt-5",  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    </div>
  </div>
</div>
